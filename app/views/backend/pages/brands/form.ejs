<% 
  const collection = 'brands';
  const linkPrefix = systemConfig.prefixBackend + `/${collection}/`;
%>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Biểu mẫu
            </div>
            <div class="panel-body">
                <% include ./../../elements/errors %>
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="<%= linkPrefix %>save/" method="POST">
                            <div class="form-group">
                                <label>Thương hiệu</label>
                                <input class="form-control" name="name" id="name_brand" value="<%= brand.name %>">
                            </div>

                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select name="status" class="form-control">
                                    <option value="novalue" <%- (brand.status == 'novalue') ? 'selected="selected"' : '' %> >Chọn trạng thái</option>
                                    <option value="active" <%- (brand.status == 'active') ? 'selected="selected"' : '' %> >Hoạt động</option>
                                    <option value="inactive" <%- (brand.status == 'inactive') ? 'selected="selected"' : '' %> >Không hoạt động</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Hoàn tất </button>
                            <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Hủy bỏ</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>